---
import '../styles/utilities.css';
import '../styles/components.css';
import { ThemeButton } from '../components/Button';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="dark light" />
    <title>Stuff by Joel D'Souza</title>
  </head>
  <body class="home">
    <header class="flex container"><ThemeButton client:load /></header>
    <main class="container">Hello</main>
  </body>
</html>

<style is:global>
  html {
    /* light */
    --brand-light: var(--pink-6);
    --text1-light: var(--gray-8);
    --text2-light: var(--gray-7);
    --surface1-light: var(--gray-0);
    --surface2-light: var(--gray-1);
    --surface3-light: var(--gray-2);
    --surface4-light: var(--gray-3);
    --surface-shadow-light: 200 10% 20%;
    --shadow-strength-light: 2%;

    /* dark */
    --brand-dark: var(--pink-3);
    --text1-dark: var(--gray-1);
    --text2-dark: var(--gray-3);
    --surface1-dark: var(--gray-9);
    --surface2-dark: var(--gray-8);
    --surface3-dark: var(--gray-7);
    --surface4-dark: var(--gray-6);
    --surface-shadow-dark: 200 50% 3%;
    --shadow-strength-dark: 80%;
  }

  :root {
    color-scheme: light;

    /* set defaults */
    --brand: var(--brand-light);
    --text1: var(--text1-light);
    --text2: var(--text2-light);
    --surface1: var(--surface1-light);
    --surface2: var(--surface2-light);
    --surface3: var(--surface3-light);
    --surface4: var(--surface4-light);
    --surface-shadow: var(--surface-shadow-light);
    --shadow-strength: var(--shadow-strength-light);
  }

  @media (color-index: 48) {
    :root {
      color-scheme: dark;

      --brand: var(--brand-dark);
      --text1: var(--text1-dark);
      --text2: var(--text2-dark);
      --surface1: var(--surface1-dark);
      --surface2: var(--surface2-dark);
      --surface3: var(--surface3-dark);
      --surface4: var(--surface4-dark);
      --surface-shadow: var(--surface-shadow-dark);
      --shadow-strength: var(--shadow-strength-dark);
    }
  }

  @media (prefers-color-scheme: dark) {
    :root {
      color-scheme: dark;

      --brand: var(--brand-dark);
      --text1: var(--text1-dark);
      --text2: var(--text2-dark);
      --surface1: var(--surface1-dark);
      --surface2: var(--surface2-dark);
      --surface3: var(--surface3-dark);
      --surface4: var(--surface4-dark);
      --surface-shadow: var(--surface-shadow-dark);
      --shadow-strength: var(--shadow-strength-dark);
    }
  }

  [color-scheme='light'] {
    color-scheme: light;

    --brand: var(--brand-light);
    --text1: var(--text1-light);
    --text2: var(--text2-light);
    --surface1: var(--surface1-light);
    --surface2: var(--surface2-light);
    --surface3: var(--surface3-light);
    --surface4: var(--surface4-light);
    --surface-shadow: var(--surface-shadow-light);
    --shadow-strength: var(--shadow-strength-light);
  }

  [color-scheme='dark'] {
    color-scheme: dark;

    --brand: var(--brand-dark);
    --text1: var(--text1-dark);
    --text2: var(--text2-dark);
    --surface1: var(--surface1-dark);
    --surface2: var(--surface2-dark);
    --surface3: var(--surface3-dark);
    --surface4: var(--surface4-dark);
    --surface-shadow: var(--surface-shadow-dark);
    --shadow-strength: var(--shadow-strength-dark);
  }

  /* 
  * ==============================
  * browser reset
  * ==============================
  */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  /* Reset Margins */

  body,
  h1,
  h2,
  h3,
  h4,
  h5,
  p,
  figure,
  picture {
    margin: 0;
  }

  html:focus-within {
    scroll-behavior: smooth;
  }

  /* set up the body */
  body {
    /* body should cover the page */
    font-family: var(--font-mono);
    font-size: var(--font-size-fluid-1);
    color: var(--text1);
    overflow-x: hidden;
    display: grid;
    grid-template-rows: min-content 1fr;
    padding: var(--size-fluid-1);
    gap: var(--size-fluid-1);
    min-height: 100vh;
    /** depends on the use case here, this is for performance */
    text-rendering: optimizeSpeed;
    line-height: 1.5;
  }

  /* making images easier to work with */
  /* make it fluid by default */
  img,
  picture {
    max-width: 100%;
    display: block;
  }

  /* makes font easier */
  input,
  button,
  textarea,
  select {
    font: inherit;
  }

  /* remove animation for people who have turned them off */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
    }
  }
</style>
